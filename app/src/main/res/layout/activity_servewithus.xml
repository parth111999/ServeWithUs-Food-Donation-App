<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServewithusActivity"
    android:background="@color/prof">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_btn_2" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp"
        android:height="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_horizontal"
        android:text="AboutUs"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />
    <!---->

    <FrameLayout

        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_marginTop="17dp"
        android:background="@color/colorTransparentWhite"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <VideoView
            android:id="@+id/vdVw"
            android:layout_width="400dp"
            android:layout_height="250dp"
            android:layout_marginTop="23dp"
            android:background="@color/transparent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="180dp"
        android:background="@drawable/custom_shape"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="16dp">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Name : SERVEWITHUS COMMUNITY" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Email: servewithus@gmail.com" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Contact Number: (+91) 1234567890" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/i1"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" />
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:onClick="backflotingbtn"
        android:layout_gravity=""
        android:foregroundGravity="left"


        android:src="@drawable/ic_arrow_back"
        app:maxImageSize="35dp"
        app:pressedTranslationZ="2dp"/>




</LinearLayout>