<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:src="@drawable/ic_photo_black_24dp"
                    app:tint="@color/col_red" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="GALLERY"
                    android:textColor="@color/white"
                    android:textSize="22dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/square"
                android:layout_below="@+id/linearLayout1"
                android:rotation="45"
                android:layout_marginTop="-10dp"
                android:layout_centerHorizontal="true"
                app:tint="#FFCB2D" />


            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/linearLayout1"
                android:layout_marginTop="40dp">

                <TableRow
                    android:id="@+id/t1">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g1"
                        android:layout_marginLeft="6dp"/>

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g2"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g3"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g4"
                        android:layout_marginLeft="5dp"/>

                </TableRow>

                <TableRow
                    android:layout_marginTop="90dp"
                    android:layout_marginLeft="-357dp">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g5"
                        android:layout_marginLeft="6dp"/>

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g6"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g7"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g8"
                        android:layout_marginLeft="5dp"/>

                </TableRow>

                <TableRow
                    android:layout_marginTop="180dp"
                    android:layout_marginLeft="-357dp">

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g9"
                        android:layout_marginLeft="6dp"/>

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g10"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g11"
                        android:layout_marginLeft="5dp"/>

                    <ImageView
                        android:layout_width="84dp"
                        android:layout_height="80dp"
                        android:src="@drawable/g12"
                        android:layout_marginLeft="5dp"/>

                </TableRow>


            </GridLayout>


            <Button
                android:id="@+id/btnss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/gridLayout"
                android:layout_gravity="center"
                android:layout_marginHorizontal="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="300dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/background_btn_2"
                android:fontFamily="@font/baloo"
                android:text="slideshow"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginTop="650dp"
        android:layout_marginBottom="0dp"
        android:foregroundGravity="center"
        android:onClick="backflotingbtn"
        android:src="@drawable/ic_arrow_back"
        app:maxImageSize="30dp"
        app:pressedTranslationZ="1dp"
        android:layout_alignParentLeft="true"
        />


</RelativeLayout>